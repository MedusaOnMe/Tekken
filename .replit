run = "npm run dev"
entrypoint = "index.html"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "npm run build && npm run preview -- --host 0.0.0.0 --port 3000"]
deploymentTarget = "static"

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx,mjs}"
syntax = "javascript"

[languages.html]
pattern = "**/*.html"
syntax = "html"

[languages.css]
pattern = "**/*.css"
syntax = "css"